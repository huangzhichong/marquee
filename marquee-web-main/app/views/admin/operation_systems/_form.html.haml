-if flash[:error]
  .alert-message.error= flash[:error].html_safe

= form_for([:admin, @operation_system]) do |f|
  -if @operation_system.errors.any?
    #error_explanation
      %h2= "#{pluralize(@operation_system.errors.count, "error")} prohibited this browser from being saved:"
      %ul
        - @operation_system.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    %legend= title
    .clearfix
      = f.label :name
      .input
        = f.text_field :name, :class => "validate[required]"
    .clearfix
      = f.label :version
      .input
        = f.text_field :version, :class => "validate[required]"
    .actions
      = f.submit 'Save', :class => 'btn primary'
      = link_to 'Back', admin_browsers_path, :class => 'btn'

:javascript
  $(function(){
    $("#new_browser").validationEngine({promptPosition: "bottomRight", scroll: false});
  })