.page-header
  %h2 Roles

%table
  %tr
    %th Name
    %th 

  - if @roles.nil? or @roles.count == 0
    %tr
      %td{:colspan => "2"}
        %h4 No data
  - else
    - @roles.each do |role|
      %tr
        %td= role.name
        = render :partial => 'partial/table_actions', :locals => {:show_url => admin_role_path(role), :edit_url => edit_admin_role_path(role)}
%br

= link_to 'New role', new_admin_role_path, :class => 'btn primary'
