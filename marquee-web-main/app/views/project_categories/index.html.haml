%h1 Listing project_categories

%table.zebra-striped
  %tr
    %th Name
    %th

  - if @project_categories.nil? or @project_categories.count == 0
    %tr
      %td{:colspan => "2"}
        %h4 No data
  - else
    - @project_categories.each do |project_category|
      %tr
        %td= project_category.name
        = render :partial => 'partial/table_actions', :locals => {:show_url => project_category_path(project_category), :edit_url => edit_project_category_path(project_category)}

= link_to 'New Project category', new_project_category_path, :class => 'btn primary'
