= form_for @project_category do |f|
  -if @project_category.errors.any?
    #error_explanation
      - @project_category.errors.messages.each do |attr, msg|
        %span.help-inline{:id => "project_category_#{attr}"}= msg[0]

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
