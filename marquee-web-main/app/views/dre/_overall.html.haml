      %tr{:style => "height: 22px"}
        %td.market Platform
        %td
          %div{:style => "margin: 0pt auto; background-color:#{@platform.sev1_bugs_color}; width:11px; height:11px"}
        %td.count
          = @platform.sev1_bugs
        %td
          %div{:style => "margin: 0pt auto; background-color:#{@platform.sev2_bugs_color}; width:11px; height:11px"}
        %td.count
          = @platform.sev2_bugs
      %tr{:style => "height: 22px"}
        %td.market Framework
        %td
          %div{:style => "margin: 0pt auto; background-color:#{@framework.sev1_bugs_color}; width:11px; height:11px"}
        %td.count
          = @framework.sev1_bugs
        %td
          %div{:style => "margin: 0pt auto; background-color:#{@framework.sev2_bugs_color}; width:11px; height:11px"}
        %td.count
          = @framework.sev2_bugs

        %table#defect-removal-efficiency
          %thead
            %tr
              %th{:colspan => '4'} Defect Removal Efficiency
          %tbody
            %tr.overall-percentage
              %td{:colspan => '3', :rowspan => "3"}
                .big-title overall percentage program-wide
                .dre-big-value= @overall_dre
              %td.framework
                .title Framework
                .dre-value= @framework_dre
            %tr.market
              %td.platform.platform-overall-switch{:data => dre_platform_dre_path}
                .title Platform
                .dre-value= @platform_dre
            %tr.market
              %td.membership
                .title Membership
                .dre-value= @membership_dre
            %tr.market
              %td.endurance
                .title Endurance
                .dre-value= @endurance_dre
              %td.camps
                .title Camps
                .dre-value= @camps_dre
              %td.sports
                .title Team Sports
                .dre-value= @sports_dre
              %td.swimming
                .title Swimming
                .dre-value= @swimming_dre
          %tfoot
            %tr
              %td{:colspan => '4'} Target Rate - 5% or Lower

:javascript
  $(function(){
    $('td.platform.platform-overall-switch').click(function(){
      $.getScript($(this).attr("data"));
    });
  });