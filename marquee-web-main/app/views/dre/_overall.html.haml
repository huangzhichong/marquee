        %table#defect-removal-efficiency
          %thead
            %tr
              %th{:colspan => '4'} Defect Removal Efficiency
          %tbody
            %tr.overall-percentage
              %td{:colspan => '3', :rowspan => "3"}
                .big-title overall percentage program-wide
                .dre-big-value= @overall_dre
              %td.framework
                .title Framework
                .dre-value= @framework_dre
            %tr.market
              %td.platform.platform-overall-switch{:data => dre_platform_dre_path}
                .title Platform
                .dre-value= @platform_dre
            %tr.market
              %td.membership
                .title Membership
                .dre-value= @membership_dre
            %tr.market
              %td.endurance
