                .dre-value= @endurance_dre
              %td.camps
                .title Camps
                .dre-value= @camps_dre
              %td.sports
                .title Team Sports
                .dre-value= @sports_dre
              %td.swimming
                .title Swimming
                .dre-value= @swimming_dre
          %tfoot
            %tr
              %td{:colspan => '4'} Target Rate - 5% or Lower

