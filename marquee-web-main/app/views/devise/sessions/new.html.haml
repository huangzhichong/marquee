-if flash[:alert]
  .alert-message.error= flash[:alert]

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %fieldset
    %legend Sign in
    .clearfix
      = f.label :email
      .input
        =f.text_field :email
    .clearfix
      = f.label :password
      .input
        = f.password_field :password
    .actions
      = f.submit "Sign in", :class => "btn primary"