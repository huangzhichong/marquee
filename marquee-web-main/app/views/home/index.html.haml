.home-box
  .outer-home-box
    .inner-home-box
      .chart-title
        %h5 Activity Stream
      .filter-dropdown
        = select_tag 'activities-filter', options_from_collection_for_select(Project.all, :name, :name), :include_blank => true
        %span#activities-filter-tip Filter by: 

        / = f.select :project_category_id, options_from_collection_for_select(ProjectCategory.order('name asc'), :id, :name, @project.project_category_id), {}, {:class => "chzn-select", :id => "activities-filter"}
        .clearfix
      .activity-stream
        - @activities.each do |activity|
          .activity-box
            .time= in_time_zone(activity.created_at)
            .activity
              = link_to activity.user.email, admin_user_path(activity.user.id), :class => "user"
              %span.action= " scheduled"
              %span.object
                = " a new Test Round"
                - tr = TestRound.find_by_id(activity.auditable_id)
                - if tr
                  = link_to activity.auditable_id, project_test_round_path(tr.project.id, tr.id)
                  = " for"
                  = link_to tr.project.name, project_test_rounds_path(tr.project.id)
