:css
  #dre-table{
    cursor: pointer;
  }

:javascript
  $(function(){
    $('#activities-filter').chosen();
    $('#activities-filter').change(function(e){
      var value = $(e.target).val();
      $('.activity-stream .activity-box:contains("'+value+'")').show();
      $('.activity-stream .activity-box:not(:contains("'+value+'"))').hide();
    });
  });


